<div class="posted-show">
  <nav class="posted-nav">
    <%= link_to 'edit', edit_post_path(@post) %>
    <%= link_to 'Back', posts_path %>
  </nav>
  <section class="posted-user">
    <%= image_tag "#{@post.user.user_icon}", class:"posted-user-icon" %>
    <%= "#{@post.user.name}" %>
  </section>
    <%= image_tag @post.image.url, class:"posted-pict" %>
  <section class="posted-content">
    <%= @post.content %>
  </section>
  <% unless @post.user_id == current_user.id %>
    <% if @favorite.present? %>
      <%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
    <% else %>
      <%= link_to 'お気に入りする', favorites_path(post_id: @post.id), method: :post, class: 'btn btn-primary' %>
    <% end %>
  <% end %>
</diV>