<div class="row">
<%= form_with(model: @user, local: true) do |f| %>
	<% if @user.errors.any? %>
		<div id="error_explanation">
			<span><%= @user.errors.count %>erros.</span>
			<ul>
				<% @user.errors.full_messages.each do |m| %>
					<li id='error_message'><%= m %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<ul>
		<li><%= image_tag(@user.user_icon.url) if @user.user_icon && @user.user_icon.url%></li>
		<li><%= f.file_field :user_icon %></li>
		<li><%= f.hidden_field :user_icon_cache %></li>
		<li><%= f.check_box :remove_user_icon %>remove_image</li>
		<li><%= f.label :name %></li>
		<li><%= f.text_field :name %></li>
		<li><%= f.label :email %></li>
		<li><%= f.email_field :email %></li>
		<li><%= f.label :password %></li>
		<li><%= f.password_field :password %></li>
		<li><%= f.label :password_confirmation %></li>
		<li><%= f.password_field :password_confirmation %></li>
		<li><%= f.submit 'send'%>
	</ul>
<% end %>
<%= link_to 'Back', posts_path %>
</div>